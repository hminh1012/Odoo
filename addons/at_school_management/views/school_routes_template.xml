<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="school_routes_page_new" name="School Bus Routes">
        <t t-call="website.layout">
            <div class="container mt-5">
                <div class="row">
                    <div class="col-12">
                        <h2 class="mb-4">School Bus Routes</h2>
                        <div class="table-responsive">
                            <table class="table table-bordered table-striped">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>Route Name</th>
                                        <th>Bus Number</th>
                                        <th>Driver Name</th>
                                        <th>Capacity</th>
                                        <th>Next Stop</th>
                                        <th>Activity (In/Out)</th>
                                        <th>Passengers Onboard</th>
                                        <th>Map</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="routes" t-as="route">
                                        <tr>
                                            <td><span t-field="route.name"/></td>
                                            <td><span t-field="route.bus_number"/></td>
                                            <td><span t-field="route.driver_name"/></td>
                                            <td><span t-field="route.capacity"/></td>
                                            <td>
                                                <span t-if="route.next_stop_id" t-field="route.next_stop_id.name"/>
                                                <span t-else="" class="text-muted">-</span>
                                            </td>
                                            <td>
                                                <span class="badge badge-success" title="Boarding">+<t t-esc="route.boarding_next_count"/></span>
                                                <span class="badge badge-danger" title="Alighting">-<t t-esc="route.alighting_next_count"/></span>
                                            </td>
                                            <td>
                                                <span class="badge badge-info" t-att-id="'passenger-count-%s' % route.id"><t t-esc="len(route.current_passenger_ids)"/></span>
                                                <div t-att-id="'passenger-list-%s' % route.id">
                                                    <t t-foreach="route.current_passenger_ids" t-as="student">
                                                        <small class="d-block text-muted"><t t-esc="student.name"/></small>
                                                    </t>
                                                </div>
                                            </td>
                                            <td>
                                                <a t-attf-href="/school_transport/map/#{route.id}" class="btn btn-sm btn-primary">
                                                    View Map
                                                </a>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                        <div t-if="not routes" class="alert alert-info">
                            No bus routes found.
                        </div>
                    </div>
                </div>
            </div>
            
            <script>
                document.addEventListener('DOMContentLoaded', function() {
                    function updatePassengerStatus() {
                        fetch('/school_transport/api/live_status')
                            .then(response => response.json())
                            .then(data => {
                                for (const [routeId, routeData] of Object.entries(data)) {
                                    // Update Count
                                    const countBadge = document.getElementById('passenger-count-' + routeId);
                                    if (countBadge) {
                                        countBadge.textContent = routeData.passenger_count;
                                    }
                                    
                                    // Update List
                                    const listDiv = document.getElementById('passenger-list-' + routeId);
                                    if (listDiv) {
                                        listDiv.innerHTML = ''; // Clear current list
                                        routeData.passengers.forEach(student => {
                                            const small = document.createElement('small');
                                            small.className = 'd-block text-muted';
                                            small.textContent = student.name;
                                            listDiv.appendChild(small);
                                        });
                                    }
                                }
                            })
                            .catch(error => console.error('Error fetching live status:', error));
                    }

                    // Poll every 5 seconds
                    setInterval(updatePassengerStatus, 5000);
                });
            </script>
        </t>
    </template>
</odoo>
